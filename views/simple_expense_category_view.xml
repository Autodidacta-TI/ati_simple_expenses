<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="simple_expense_category_view_tree" model="ir.ui.view">
        <field name="name">simple.expense.category.view.tree</field>
        <field name="model">simple.expense.category</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="name" />
                <field name="code" />
            </tree>
        </field>
    </record>

    <record id="simple_expense_category_view_form" model="ir.ui.view">
        <field name="name">simple.expense.category.view.form</field>
        <field name="model">simple.expense.category</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="code" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
